{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "lib": ["ES2021"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },

    /** ⭐ OBRIGATÓRIOS PARA NESTJS COM DECORATORS */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /** ⭐ SEMPRE DESATIVAR NO NESTJS */
    "useDefineForClassFields": false
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}
